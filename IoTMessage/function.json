{
  "bindings": [
    {
      "type": "eventHubTrigger",
      "name": "IoTHubMessages",
      "direction": "in",
      "eventHubName": "IOT_HUB_EVENT_HUB_NAME",
      "connection": "IOT_HUB_CONNECTION",
      "cardinality": "many",
      "consumerGroup": "$Default"
    },
    {
      "type": "cosmosDB",
      "name": "documents", 
      "databaseName": "sierra",
      "collectionName": "data",
      "createIfNotExists": false,
      "connectionStringSetting": "DATABASE_CONNECTION",
      "direction": "out"
    }
  ]
}
